<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="trelligen.app.cine">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
	<uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".pantalla.PantallaPrincipal"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".pantalla.Login"
            android:label="@string/title_activity_login"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".pantalla.Perfil"
            android:label="@string/title_activity_myprofile"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".pantalla.EditarPerfil"
            android:label="@string/title_activity_editprofile"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".pantalla.InfoPelicula"
            android:label="@string/title_activity_infopelicula"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".pantalla.Registrar"
            android:label="@string/title_activity_register"
            android:theme="@style/AppTheme.NoActionBar" />
		<activity
            android:name=".pantalla.BusquedaAvanzada"
            android:label="@string/title_activity_busquedaavanzada"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".pantalla.Resultados"
            android:label="@string/title_activity_resultados"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".pantalla.Vistas"
            android:label="@string/title_activity_vistas"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".pantalla.Pendientes"
            android:label="@string/title_activity_pendientes"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>
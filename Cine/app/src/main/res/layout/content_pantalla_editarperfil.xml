<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context=".pantalla.EditarPerfil"
        android:nestedScrollingEnabled="true">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Editar perfil"
            android:id="@+id/profile_title"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textSize="30dp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:id="@+id/view"
            android:layout_marginTop="23dp"
            android:layout_below="@+id/profile_title"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:id="@+id/view2"
            android:layout_marginTop="3dp"
            android:layout_below="@+id/profile_username"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/profile_username"
            android:layout_marginTop="3dp"
            android:background="#3189E1"
            android:textColor="#FFFFFF"
            android:textSize="23dp"
            android:layout_below="@+id/view"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textAlignment="center"
            android:clickable="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="> Correo"
            android:id="@+id/profile_i1"
            android:layout_marginTop="22dp"
            android:layout_below="@+id/view2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/profile_mail"
            android:textSize="20dp"
            android:layout_below="@+id/profile_i1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:clickable="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="> Nombre"
            android:id="@+id/profile_i2"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="18dp"
            android:layout_below="@+id/profile_mail"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/profile_nombre"
            android:textSize="20dp"
            android:layout_below="@+id/profile_i2"
            android:layout_alignLeft="@+id/profile_mail"
            android:layout_alignStart="@+id/profile_mail"
            android:clickable="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="> F. de nacimiento"
            android:id="@+id/profile_i3"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="18dp"
            android:layout_below="@+id/profile_nombre"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/profile_fnacimiento"
            android:textSize="20dp"
            android:layout_below="@+id/profile_i3"
            android:layout_alignLeft="@+id/profile_nombre"
            android:layout_alignStart="@+id/profile_nombre"
            android:editable="true"
            android:clickable="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="> Contraseña antigua"
            android:id="@+id/profile_i4"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="18dp"
            android:layout_below="@+id/profile_fnacimiento"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/profile_pass"
            android:textSize="20dp"
            android:layout_below="@+id/profile_i4"
            android:layout_alignLeft="@+id/profile_fnacimiento"
            android:layout_alignStart="@+id/profile_fnacimiento"
            android:inputType="textPassword"
            android:clickable="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="> Nueva contraseña"
            android:id="@+id/profile_i5"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="18dp"
            android:layout_below="@+id/profile_pass"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/profile_newPass1"
            android:textSize="20dp"
            android:layout_below="@+id/profile_i5"
            android:layout_alignLeft="@+id/profile_pass"
            android:layout_alignStart="@+id/profile_pass"
            android:inputType="textPassword"
            android:clickable="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="> Repita nueva contraseña"
            android:id="@+id/profile_i6"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="18dp"
            android:layout_below="@+id/profile_newPass1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/profile_newPass2"
            android:textSize="20dp"
            android:layout_below="@+id/profile_i6"
            android:layout_alignLeft="@+id/profile_newPass1"
            android:layout_alignStart="@+id/profile_newPass1"
            android:inputType="textPassword"
            android:clickable="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guardar cambios"
            android:id="@+id/profile_editbutton"
            android:textStyle="bold"
            android:textSize="17dp"
            android:layout_below="@+id/profile_newPass2"
            android:layout_alignRight="@+id/profile_title"
            android:layout_alignEnd="@+id/profile_title" />

    </RelativeLayout>

</ScrollView>
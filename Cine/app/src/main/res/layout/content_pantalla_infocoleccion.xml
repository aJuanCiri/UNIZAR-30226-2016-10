<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="800dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="700dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Titulo"
                android:id="@+id/pelicula_titulo"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="50dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textStyle="bold"
                android:textSize="30dp" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="210dp"
                android:padding="1dp"
                android:background="@android:color/darker_gray"
                android:scaleType="fitXY"
                android:id="@+id/pelicula_imagen"
                android:src="@drawable/noimglg"
                android:layout_below="@+id/pelicula_titulo"
                android:layout_alignLeft="@+id/pelicula_titulo"
                android:layout_alignStart="@+id/pelicula_titulo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Fecha"
                android:id="@+id/pelicula_fecha"
                android:layout_alignTop="@+id/pelicula_imagen"
                android:layout_toRightOf="@+id/pelicula_imagen"
                android:layout_toEndOf="@+id/pelicula_imagen"
                android:layout_marginLeft="26dp"
                android:layout_marginStart="26dp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Duración 156 min"
                android:id="@+id/pelicula_duracion"
                android:layout_below="@+id/pelicula_fecha"
                android:layout_alignLeft="@+id/pelicula_fecha"
                android:layout_alignStart="@+id/pelicula_fecha"
                android:textSize="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Director:"
                android:id="@+id/textView5"
                android:textSize="14dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_above="@+id/pelicula_director"
                android:layout_alignLeft="@+id/pelicula_director"
                android:layout_alignStart="@+id/pelicula_director" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Alejandro González"
                android:id="@+id/pelicula_director"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_alignBottom="@+id/pelicula_imagen"
                android:layout_alignLeft="@+id/pelicula_duracion"
                android:layout_alignStart="@+id/pelicula_duracion"
                android:layout_marginBottom="21dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Sinopsis"
                android:id="@+id/textView7"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_below="@+id/pelicula_imagen"
                android:layout_alignLeft="@+id/pelicula_imagen"
                android:layout_alignStart="@+id/pelicula_imagen"
                android:layout_marginTop="22dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:id="@+id/view"
                android:layout_marginTop="73dp"
                android:layout_below="@+id/pelicula_sinopsis"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sinopsis de prueba"
                android:id="@+id/pelicula_sinopsis"
                android:layout_below="@+id/textView7"
                android:layout_alignLeft="@+id/textView7"
                android:layout_alignStart="@+id/textView7" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Valoración:"
                android:id="@+id/textView9"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_below="@+id/view"
                android:layout_alignLeft="@+id/pelicula_sinopsis"
                android:layout_alignStart="@+id/pelicula_sinopsis" />

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pelicula_valoracion"
                android:layout_below="@+id/textView9"
                android:layout_alignRight="@+id/textView5"
                android:layout_alignEnd="@+id/textView5"
                android:numStars="5"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Añadir a Vistas"
                android:id="@+id/botonVistas"
                android:layout_below="@+id/pelicula_valoracion"
                android:layout_marginLeft="12dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Añadir a Pendientes"
                android:id="@+id/botonPendientes"
                android:layout_below="@+id/pelicula_valoracion"
                android:layout_toRightOf="@+id/botonVistas"
                android:layout_toEndOf="@+id/botonVistas"
                android:layout_marginLeft="24dp"
                android:layout_marginStart="24dp"/>

        </RelativeLayout>
    </ScrollView>

</LinearLayout>